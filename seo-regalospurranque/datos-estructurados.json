    "schema_mejorado": {
      "@context": "https://schema.org",
      "@type": "Event",
      "name": "{fecha.nombre} en Purranque",
      "description": "{fecha.descripcion}",
      "eventStatus": "https://schema.org/EventScheduled",
      "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
      "startDate": "{fecha_inicio_ISO}",
      "location": {
        "@type": "Place",
        "name": "Purranque",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Purranque",
          "addressRegion": "Los Lagos",
          "addressCountry": "CL"
        }
      },
      "organizer": {
        "@type": "Organization",
        "name": "Regalos Purranque",
        "url": "https://regalospurranque.cl"
      },
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "CLP",
        "availability": "https://schema.org/InStock",
        "url": "https://regalospurranque.cl/fecha/{fecha.slug}"
      },
      "inLanguage": "es-CL"
    }
  },


                                <p style="font-size:var(--font-size-sm);margin-bottom:0.5rem"><?= e($foto['titulo']) ?></p>
                            <?php endif; ?>
                            <form method="POST"
                                  action="<?= url('/admin/comercios/' . $comercio['id'] . '/foto/eliminar') ?>"
                                  onsubmit="return confirm('Â¿Eliminar esta foto?')">
                                <?= csrf_field() ?>
                                <input type="hidden" name="foto_id" value="<?= $foto['id'] ?>">
                                <button type="submit" class="btn btn--danger btn--xs">Eliminar</button>
                            </form>
                        </div>
                    </div>
                <?php endforeach; ?>
            </div>
        <?php else: ?>
            <div class="empty-state">
                <div class="empty-state__icon">&#128247;</div>
                <div class="empty-state__title">Sin fotos</div>
                <div class="empty-state__text">Este comercio no tiene fotos en la galeria. Sube la primera foto usando el formulario de arriba.</div>
